<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="me.frauenfelderflorian.crocket.TournamentViewerController">
    <Label fx:id="tournamentLabel" text="%tournament">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
    </Label>
    <GridPane fx:id="grid" alignment="CENTER" hgap="10.0" vgap="10.0">
        <Label text="%place"/>
        <Label text="%player" GridPane.columnIndex="1"/>
        <Label text="%points" GridPane.columnIndex="2"/>
        <Separator GridPane.columnSpan="3" GridPane.rowIndex="1"/>
        <columnConstraints>
            <ColumnConstraints/>
            <ColumnConstraints/>
            <ColumnConstraints/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
        </rowConstraints>
    </GridPane>
    <Button defaultButton="true" onAction="#viewAllGames" text="%_viewAllGames"/>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
