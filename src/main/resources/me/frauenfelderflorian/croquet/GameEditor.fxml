<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="125.0" prefWidth="150.0" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.frauenfelderflorian.croquet.GameEditorController">
    <DatePicker fx:id="date" promptText="%date"/>
    <TextField fx:id="difficulty" promptText="%difficulty"/>
    <GridPane fx:id="grid" alignment="CENTER" hgap="10.0" vgap="10.0"/>
    <Button defaultButton="true" maxWidth="100.0" onAction="#saveGame" text="%_ok"/>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
